<UserControl x:Class="OlioSolitaire3000.playfield"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OlioSolitaire3000"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="840">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>
    <!-- Main grid, vertical rows -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"></RowDefinition>
            <RowDefinition Height="600"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <!-- Top Row; Has three columns -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="120"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <!-- Deal Again Button, in column 1 -->
            <Button Grid.Column="0" Name="btnDeal" Content="Deal Again" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Click="btnDeal_Click" />
            <!-- Grid to show current cards in hand, in column 2 -->
            <Grid Grid.Column="1" Margin="20" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <!-- Textblock -->
                <TextBlock Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="16" Text="Current Hand:"></TextBlock>
                <!-- Shows current cards in hand -->
                <ItemsControl Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Name="CurrentHand">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" BorderBrush="Black" BorderThickness="2" Width="40" Height="60" Margin="-10,-40">
                                <Grid>
                                    <Image Source="{Binding Path=NroImageSource}" Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top"></Image>
                                    <Image Source="{Binding Path=SuitImageSource}" Width="20" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top"></Image>
                                    <Rectangle Fill="{Binding Path=Colour}" Width="20" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top">
                                        <Rectangle.OpacityMask>
                                            <ImageBrush ImageSource="{Binding Path=SuitImageSource}"/>
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                    <Image Source="{Binding Path=NroImageSource}" Width="20" Height="20" HorizontalAlignment="Left" VerticalAlignment="Bottom"></Image>
                                    <Image Source="{Binding Path=SuitImageSource}" Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Bottom"></Image>
                                    <Rectangle Fill="{Binding Path=Colour}" Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                                        <Rectangle.OpacityMask>
                                            <ImageBrush ImageSource="{Binding Path=SuitImageSource}"/>
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                    <Button Click="hitBoxHome1_Click" Opacity="0" ></Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
            <!-- Back to menu Button, in column 3 -->
            <Button Grid.Column="2" Name="btnBack" Content="Back to Menu" Click="btnBack_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20" />
        </Grid>
        <!-- Background render -->
        <StackPanel Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <Button Opacity="0" HorizontalAlignment="Left" BorderBrush="Black" BorderThickness="2" Width="80" Height="120" Margin="20,0" Click="ButtonStack_Click"/>
