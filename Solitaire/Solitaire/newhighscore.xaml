<Window x:Class="OlioSolitaire3000.newhighscore"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OlioSolitaire3000"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="You got an High Score!" Height="110" Width="300">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Your Score Was:" Margin="10"></TextBlock>
                <TextBlock x:Name="scoreBox" Text="" Margin="0,10"></TextBlock>
            </StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="txtbxName"  Text="Enter Your Name" Margin="10" Grid.Column="0"></TextBox>
                <Button x:Name="btnSaveScore" Margin="10" Width="75" HorizontalAlignment="Right" Content="Save" Grid.Column="1" Click="btnSaveScore_Click"></Button>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
